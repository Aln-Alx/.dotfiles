# Ghostty Config by allen-alex

# [Shell]


# [Misc. Apearance]
		# Font:
font-family = Terminess Nerd Font Mono
		# Cursor:
shell-integration-features = no-cursor
adjust-cursor-thickness = 12
cursor-style = "block"
		# Window:
title = "ghostty"
maximize = true
window-decoration = "none"
window-padding-x = 10
window-padding-y = 10,20
background-blur = true 
#-- set to false because it doesn't look great with my wallpaper
background-blur-radius = 20
background-opacity = 0.3

# [Custom-Keybinds]
keybind = ctrl+up=scroll_page_up
keybind = ctrl+down=scroll_page_down
keybind = ctrl+shift+t=new_tab
keybind = ctrl+shift+w=close_tab
keybind = ctrl+y=copy_to_clipboard
keybind = ctrl+v=paste_from_clipboard
keybind = ctrl+,=open_config
